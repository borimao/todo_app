<% provide(:title, 'Sign up') %>
<div class="flex_box">
    <div class="form_area">
        <h1>Sign up</h1>
        <%= form_for(@user, url: signup_path) do |f| %>
        <%= render 'shared/error_messages' %>
            <table>
                    <tbody>
                    <tr>
                        <th><%= f.label :name %></th>
                        <td><%= f.text_field :name, class: 'form-control' %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :email %></th>
                        <td><%= f.email_field :email, class: 'form-control' %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :password %></th>
                        <td><%= f.password_field :password, class: 'form-control' %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :password_confirmation, "Confirmation" %></th>
                        <td><%= f.password_field :password_confirmation, class: 'form-control' %></td>
                    </tr>
                </tbody>
            </table>
            <div class="btn_area">
                <%= f.submit "Create my account", class: "btn btn-primary sign_button" %>
            </div>
        <% end %>
    </div>
</div>
    